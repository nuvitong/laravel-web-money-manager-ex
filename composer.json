{
    "name": "okaufmann/laravel-web-money-manager-ex",
    "description": "Complete rewrite of Money Manager Ex WebApp based on Laravel for better security and more functionality.",
    "keywords": ["framework", "laravel", "mmex", "money", "webapp"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^7.0",
        "laravel/framework": "5.5.*",
        "rap2hpoutre/laravel-log-viewer": "^0.8.0",
        "spatie/laravel-medialibrary": "^4.9",
        "spatie/laravel-fractal": "^4.01",
        "doctrine/dbal": "~2.3"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.0",
        "barryvdh/laravel-ide-helper": "^2.3",
        "barryvdh/laravel-debugbar": "^2.4"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan ide-helper:generate",
            "php artisan ide-helper:meta",
            "php artisan optimize"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
